<UserControl x:Class="ProgrammingEducationProject.QuestionsBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProgrammingEducationProject"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="100">
    <Grid>
        <StackPanel Margin="0, 10, 0, 10">
            <TextBlock Text="{Binding Question}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" FontWeight="Medium" TextWrapping="Wrap" Width="170" Margin="5"/>
            <Button x:Name="AnswerButton1" Click="AnswerButton_Click" Margin="5" HorizontalAlignment="Center" Width="100" Height="30" Background="Beige"/>
            <Button x:Name="AnswerButton2" Click="AnswerButton_Click" Margin="5" HorizontalAlignment="Center" Width="100" Height="30" Background="Beige"/>
            <Button x:Name="AnswerButton3" Click="AnswerButton_Click" Margin="5" HorizontalAlignment="Center" Width="100" Height="30" Background="Beige"/>
        </StackPanel>
    </Grid>
</UserControl>
