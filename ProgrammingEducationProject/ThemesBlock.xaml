<UserControl x:Class="ProgrammingEducationProject.ThemesBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProgrammingEducationProject"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="100">
    <Grid>
        <StackPanel Background="Beige">
            <TextBlock Text="{Binding ThemeTitle}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" FontSize="15" FontWeight="Medium" TextWrapping="Wrap" Width="90"/>
            <TextBlock Text="{Binding NumberOfQuestions, StringFormat={}{0} вопроса}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" FontSize="10" FontWeight="Medium"/>
        </StackPanel>
    </Grid>
</UserControl>
